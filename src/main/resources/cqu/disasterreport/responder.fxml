<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="550.0" prefWidth="916.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cqu.disasterreport.ResponderController">
   <children>
      <Text layoutX="360.0" layoutY="30.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Responder Panel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
      <TableView fx:id="reportTable" layoutX="20.0" layoutY="50.0" prefHeight="300.0" prefWidth="860.0">
         <columns>
            <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Disaster Type" />
            <TableColumn fx:id="locationColumn" prefWidth="100.0" text="Location" />
            <TableColumn fx:id="severityColumn" prefWidth="80.0" text="Severity" />
            <TableColumn fx:id="reporterColumn" prefWidth="100.0" text="Reporter Name" />
            <TableColumn fx:id="descriptionColumn" prefWidth="150.0" text="Description" />
            <TableColumn fx:id="timeColumn" prefWidth="120.0" text="Reported Time" />
            <TableColumn fx:id="departmentColumn" prefWidth="150.0" text="Assigned Department" />
            <TableColumn fx:id="handledColumn" prefWidth="100.0" text="Handled" />
         </columns>
      </TableView>
      <Button layoutX="370.0" layoutY="370.0" mnemonicParsing="false" onAction="#markSelectedAsHandled" text="Mark as Handled" />
      <Button layoutX="370.0" layoutY="410.0" mnemonicParsing="false" onAction="#goBack" text="Back to Login" />
   </children>
</AnchorPane>
