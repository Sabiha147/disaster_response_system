<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cqu.disasterreport.CivilianController">
   <children>
      <Label layoutX="30.0" layoutY="40.0" text="Disaster Type:" />
      <ComboBox fx:id="disasterTypeCombo" layoutX="130.0" layoutY="35.0" prefWidth="150.0" promptText="Select disaster type" />
      <Label layoutX="330.0" layoutY="40.0" text="Severity:" />
      <ComboBox fx:id="severityCombo" layoutX="400.0" layoutY="35.0" prefWidth="150.0" promptText="Select severity" />
      <Label layoutX="30.0" layoutY="85.0" text="Location:" />
      <TextField fx:id="locationField" layoutX="130.0" layoutY="80.0" prefWidth="420.0" promptText="Enter disaster location" />
      <Label layoutX="30.0" layoutY="130.0" text="Reporter Name:" />
      <TextField fx:id="reporterNameField" layoutX="130.0" layoutY="125.0" prefWidth="420.0" promptText="Enter your name" />
      <Label layoutX="30.0" layoutY="175.0" text="Description:" />
      <TextArea fx:id="descriptionArea" layoutX="130.0" layoutY="170.0" prefWidth="420.0" prefHeight="120.0" promptText="Describe the situation briefly..." />
      <Button fx:id="submitButton" layoutX="430.0" layoutY="310.0" text="Submit Report" onAction="#submitReport" />
      <Button layoutX="300.0" layoutY="310.0" text="Back to Login" onAction="#goBack" />
   </children>
</AnchorPane>
